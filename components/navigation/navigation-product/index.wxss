/* components/navigation/navigation-product/index.wxss */
.navigation-product {
  background-color: var(--background-white-color);
  display: flex;
  align-items: flex-end;
  box-sizing: border-box;
  padding: 0 10px 10px 10px;
  position: fixed;
  top: 0;
  width: 100%;
  /* box-shadow: 0 1px 5px var(--shadow-color); */
}

.navigation-product-back {
  width: 32px;
  height: 32px;
}

.navigation-product-content {
  font-size: var(--zh-fourteen-size);
  color: var(--text-color);
  margin-left: 20px;
}

.navigation-product-content-bottom {
  font-size: var(--zh-ten-size);
  color: var(--normal-color);
  display: flex;
  align-items: center;
}

.navigation-product-content-bottom-icon {
  width: 10px;
  height: 10px;
}